<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorScreenBackground">
    <TextView
            android:text="@string/entrance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Entrance_txt" android:textSize="45sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/result_string"
            android:layout_width="380dp"
            android:layout_height="67dp"
            android:id="@+id/Result_txt" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.49" android:layout_marginBottom="320dp"/>
    <EditText
            android:layout_width="385dp"
            android:layout_height="151dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/InfixNotation_txtEdit"
            app:layout_constraintTop_toBottomOf="@+id/Entrance_txt"
            app:layout_constraintBottom_toTopOf="@+id/Result_txt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
            android:hint="@string/entrance_textEdit"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Clear_btn" android:text="@string/btn_Clear"
            app:layout_constraintTop_toBottomOf="@+id/Result_txt" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/Result_btn"
            app:layout_constraintHorizontal_bias="0.347" app:layout_constraintVertical_bias="0.208"/>
    <Button
            android:onClick="incNumberFromString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Result_btn" android:text="@string/btn_Result"
            app:layout_constraintTop_toTopOf="@+id/Clear_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp" android:layout_marginRight="68dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>