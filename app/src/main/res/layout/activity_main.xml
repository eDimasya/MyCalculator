<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorScreenBackground">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entrance_text"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="28sp" android:textStyle="bold"
            android:textColor="@android:color/darker_gray" android:textAllCaps="false" android:typeface="monospace"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:onClick="countMe"
            android:text="Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count_btn"
            android:background="@color/colorButtonBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/textView_Value"/>
    <Button
            android:onClick="toastMe"
            android:text="Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toast_btn"
            android:background="@color/colorButtonBackground"
            app:layout_constraintTop_toTopOf="@+id/count_btn" app:layout_constraintEnd_toStartOf="@+id/count_btn"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:onClick="randomMe"
            android:text="Random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_btn"
            android:background="@color/colorButtonBackground"
            app:layout_constraintTop_toTopOf="@+id/count_btn" app:layout_constraintStart_toEndOf="@+id/count_btn"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Value" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="60sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>